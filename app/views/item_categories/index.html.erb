<div>
  <%= link_to 'Add Categories', new_item_category_path, class: "tab10"%>
  <%= link_to 'home', home_index_path, class: "tab10" %>
</div>
<div>
  <table>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <th><%= category.id %></th>
        <th><%= category.name %></th>
        <th>
          <%= link_to 'Edit', edit_item_category_path(category)%> | 
          <%= link_to 'Delete', item_category_path(category), :method => 'delete', :confirm => 'Are you sure?'%>
        </th>
      </tr>
    <% end %>
  </table>
</div>
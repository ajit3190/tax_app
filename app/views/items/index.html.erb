<div>
  <%= link_to 'Add Item', new_item_path %>
  <%= link_to 'home', home_index_path %>
</div>
<br>
<div>
  <table>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <th><%= item.id %></th>
        <th><%= item.name %></th>
        <th><%= item.item_category.name %></th>
        <th><%= item.price %></th>
        <th>
          <%= link_to 'Edit', edit_item_path(item)%> | 
          <%= link_to 'Delete', item_path(item), :method => 'delete', :confirm => 'Are you sure?'%>
        </th>
      </tr>
    <% end %>
  </table>
</div>